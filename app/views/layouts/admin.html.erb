<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel | TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'admin/nav'%>
    <%= render 'shared/flash'%>
     <% if user_signed_in? %>
      <p class='nav user'>Welcome, <b><%= current_user.first_name %> Guru
      <%= link_to 'Logout', destroy_user_session_path, method: :delete%></b> </p>
    <% end %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>